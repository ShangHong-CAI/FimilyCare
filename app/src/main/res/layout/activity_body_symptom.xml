<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_body_symptom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body_symptom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lhu.user.familycare.BodySymptomActivity">

    <Button
        android:text="確定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_OK"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium" />

    <ImageView
        app:srcCompat="@drawable/body_woman2"
        android:layout_marginTop="38dp"
        android:id="@+id/IMG_body"
        android:layout_height="378dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="267dp" />

    <TextView
        android:text="已選擇的症狀："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TXTV_choose"
        android:layout_below="@+id/IMG_body"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_OK"
        android:textColor="@android:color/black" />


    <Button
        android:background="#00000000"
        android:id="@+id/ear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nose"
        android:layout_alignBottom="@+id/nose"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="onSymptomClick"
        android:text="@string/ear1" />

    <Button
        android:background="#00000000"
        android:id="@+id/ear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/neck"
        android:layout_below="@+id/head"
        android:clickable="true"
        android:onClick="onSymptomClick"
        android:text="@string/ear2" />

    <Button
        android:background="#00000000"
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_OK"
        android:layout_alignTop="@+id/IMG_body"
        android:clickable="true"
        android:onClick="onSymptomClick"
        android:text="@string/head" />

    <Button
        android:background="#00000000"
        android:id="@+id/nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ear2"
        android:layout_alignStart="@+id/ear2"
        android:layout_below="@+id/ear2"
        android:clickable="true"
        android:onClick="onSymptomClick"
        android:text="@string/nose" />

    <Button
        android:background="#00000000"
        android:id="@+id/neck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/nose"
        android:clickable="true"
        android:onClick="onSymptomClick"
        android:text="@string/neck" />

    <Button
        android:background="#00000000"
        android:id="@+id/chest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/head"
        android:layout_below="@+id/ear1"
        android:clickable="true"
        android:onClick="onSymptomClick"
        android:text="@string/chest" />

    <Button
        android:background="#00000000"
        android:id="@+id/Stomach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/chest"
        android:layout_below="@+id/chest"
        android:clickable="true"
        android:onClick="onSymptomClick"
        android:text="@string/stomach" />

    <Button
        android:background="#00000000"
        android:id="@+id/abdomen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Stomach"
        android:layout_below="@+id/Stomach"
        android:clickable="true"
        android:onClick="onSymptomClick"
        android:text="@string/abdomen" />

    <Button
        android:background="#00000000"
        android:id="@+id/hand1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/abdomen"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:clickable="true"
        android:onClick="onSymptomClick"
        android:text="@string/hand1" />

    <Button
        android:background="#00000000"
        android:id="@+id/hand2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/neck"
        android:clickable="true"
        android:onClick="onSymptomClick"
        android:text="@string/hand2" />

    <Button
        android:background="#00000000"
        android:id="@+id/leg"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TXTV_choose"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/hand1"
        android:clickable="true"
        android:onClick="onSymptomClick"
        android:text="@string/leg" />
</RelativeLayout>
