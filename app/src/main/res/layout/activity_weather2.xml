<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weathr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lhu.user.familycare.Weather">

    <TextView
        android:text="地區"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="120dp"
        android:id="@+id/TXTV_region"
        android:textSize="24sp"
        android:layout_alignRight="@+id/IMG_W_Now"
        android:layout_alignEnd="@+id/IMG_W_Now"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_margin="20dp"
        android:text="時間"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:id="@+id/TXTV_time"
        android:textSize="24sp"
        android:layout_below="@+id/TXTV_region"
        android:layout_alignLeft="@+id/TXTV_region"
        android:layout_alignStart="@+id/TXTV_region"
        android:layout_alignRight="@+id/TXTV_region"
        android:layout_alignEnd="@+id/TXTV_region"
        android:textColor="@android:color/black" />

    <TextView
        android:text="提示"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="70dp"
        android:id="@+id/TXTV_hint"
        android:textSize="24sp"
        android:layout_below="@+id/IMG_W_Now"
        android:layout_alignLeft="@+id/IMG_W_Now"
        android:layout_alignStart="@+id/IMG_W_Now"
        android:layout_marginTop="11dp"
        android:layout_alignRight="@+id/IMG_W_Now"
        android:layout_alignEnd="@+id/IMG_W_Now"
        android:textColor="@android:color/black" />
    <TextView
        android:text="溫度"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="70dp"
        android:id="@+id/TXTV_Now"
        android:textSize="25sp"
        android:layout_alignTop="@+id/IMG_W_Now"
        android:layout_toLeftOf="@+id/IMG_W_Now"
        android:layout_toStartOf="@+id/IMG_W_Now"
        android:layout_marginTop="11dp"
        android:textColor="@android:color/holo_green_dark" />
</LinearLayout>
