<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_login"
    tools:context="com.lhu.user.familycare.LoginActivity">

    <ImageView
        android:id="@+id/bg_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginBottom="216dp"
        android:id="@+id/ET_account"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="290dp"
        android:hint="請輸入帳號" />

    <Button
        android:layout_marginTop="27dp"
        android:layout_below="@+id/ET_password"
        android:layout_alignLeft="@+id/ET_password"
        android:layout_alignStart="@+id/ET_password"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:alpha="0"
        android:clickable="true"
        android:onClick="onClick"
        android:id="@+id/S_login" />

    <Button
        android:layout_height="30dp"
        android:layout_width="97dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/S_login"
        android:layout_alignStart="@+id/S_login"
        android:clickable="true"
        android:onClick="onClick"
        android:alpha="0"
        android:id="@+id/S_forget_PW" />

    <Button
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/S_login"
        android:layout_alignEnd="@+id/S_login"
        android:layout_width="48dp"
        android:alpha="0"
        android:clickable="true"
        android:onClick="onClick"
        android:id="@+id/S_registered" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="62dp"
        android:id="@+id/ET_password"
        android:hint="請輸入密碼"
        android:layout_alignTop="@+id/ET_account"
        android:layout_alignLeft="@+id/ET_account"
        android:layout_alignStart="@+id/ET_account"
        android:layout_alignRight="@+id/ET_account"
        android:layout_alignEnd="@+id/ET_account" />
</RelativeLayout>

</FrameLayout>
