<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    tools:context="com.lhu.user.familycare.MainActivity">

    <ImageView
        android:id="@+id/bg_main"
        android:src="@drawable/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <ImageView
            android:id="@+id/IMG_Body"
            android:layout_height="170dp"
            android:layout_alignBottom="@+id/IMG_Weather"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/main_body"
            android:layout_width="160dp" />

        <ImageView
            android:id="@+id/IMG_Weather"
            android:layout_marginTop="91dp"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/main_weather"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/IMG_SOS"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/main_sos"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/IMG_Body"
            android:layout_alignEnd="@+id/IMG_Body"
            android:layout_height="170dp"
            android:layout_width="160dp" />

        <ImageView
            android:id="@+id/IMG_setting"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/main_setting"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</FrameLayout>
