<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registered"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lhu.user.familycare.Registered">

    <ImageView
        android:id="@+id/bg_registered"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <EditText
        android:inputType="phone"
        android:ems="10"
        android:layout_marginBottom="225dp"
        android:id="@+id/ET_account"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="300dp"
        android:hint="請輸入電話號碼"
        android:layout_height="43dp" />

        <Button
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/TV_bitrhday"
        android:layout_alignStart="@+id/TV_bitrhday"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp"
        android:layout_height="40dp"
        android:text="註冊"
        android:layout_width="160dp"
        android:id="@+id/S_Registered" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="54dp"
            android:id="@+id/ET_password"
            android:hint="請輸入密碼"
            android:layout_alignTop="@+id/ET_account"
            android:layout_alignLeft="@+id/ET_account"
            android:layout_alignStart="@+id/ET_account" />

        <TextView
        android:id="@+id/TV_bitrhday"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
            android:ems="10"
        android:clickable="true"
        android:text="請輸入出生年月日"
        android:textSize="17sp"
            android:layout_above="@+id/S_Registered"
            android:layout_alignLeft="@+id/ET_Name"
            android:layout_alignStart="@+id/ET_Name"
            android:layout_marginBottom="32dp" />

        <ListView
            android:id="@+id/LV_gender"
        android:hint="請輸入姓名"
            android:layout_height="40dp"
            android:layout_width="140dp"
            android:layout_alignBottom="@+id/TV_bitrhday"
            android:paddingBottom="15dp"
            android:layout_alignRight="@+id/ET_Name"
            android:layout_alignEnd="@+id/ET_Name" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ET_Name"
            android:hint="請輸入姓名"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="377dp" />
    </RelativeLayout>

</FrameLayout>
